<div class="background">
    <img src="{{content.endpoint}}images/bamboo-purple.svg">
</div>

<div class="container">

    <div class="content">

        <div class="header">
            <h2>{{{model.title}}}</h2>
        </div>

        <div class="list">

            {{#each model.list as |item|}}

                <div class="item">

                    <div class="image">

                        <img class="jpg" src="{{content.endpoint}}images/people/{{item.id}}.jpg">
                        <img class="gif" src="{{content.endpoint}}images/people/{{item.id}}.gif">

                    </div>

                    <h3>{{item.name}}</h3>
                    <p>{{{item.title}}}</p>

                </div>

            {{/each}}

        </div>

    </div>

</div>
